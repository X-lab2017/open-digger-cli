{
  "name": "open-digger-cli",
  "version": "0.0.1",
  "description": "OpenDigger CLI",
  "bin": {
    "digger": "bin/index.mjs"
  },
  "scripts": {
    "dev": "unbuild --stub",
    "build": "unbuild",
    "typecheck": "tsc --noEmit",
    "lint-staged": "lint-staged",
    "test": "npm run typecheck && npm run lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevending1st/open-digger-cli.git"
  },
  "author": "stevending1st",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stevending1st/open-digger-cli/issues"
  },
  "homepage": "https://github.com/stevending1st/open-digger-cli#readme",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "tabWidth": 2
  },
  "lint-staged": {
    "*.{md,less,json,yml,ts,tsx}": "prettier --write"
  },
  "dependencies": {
    "dayjs": "^1.11.7",
    "kolorist": "^1.8.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.1.7",
    "@types/yargs": "^17.0.24",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4",
    "unbuild": "^1.2.1"
  }
}
